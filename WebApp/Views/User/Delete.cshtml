@model WebApp.Models.User

<h2 class="text-danger">Delete User</h2>

<p class="lead">Are you sure you want to permanently delete this user? This action cannot be undone.</p>

<div class="card mb-4">
    <div class="card-body">
        <p><strong>Id:</strong> @Model.Id</p>
        <p><strong>Name:</strong> @Model.Name</p>
        <p><strong>Last Name:</strong> @Model.LastName</p>
        <p><strong>Email:</strong> @Model.Email</p>
    </div>
</div>

<div class="d-flex justify-content-between">
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-lg btn-danger">Confirm Delete</button>
    </form>

    <form asp-action="UserProfile" method="get">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-lg btn-secondary">Cancel</button>
    </form>
</div>
