@model WebApp.Models.Post

<h2 class="text-danger">Delete Post</h2>

<p class="lead">Are you sure you want to delete this post?</p>

<div class="card mb-4">
    <div class="card-body">
        <p><strong>Id:</strong> @Model.Id</p>
        <p><strong>Title:</strong> @Model.Title</p>
        <p><strong>Excerpt:</strong> @Model.Excerpt</p>
        <p><strong>Created:</strong> @Model.CreatedDate</p>
    </div>
</div>

<div class="d-flex justify-content-between">
    <form asp-action="Delete" method="post">
        <input type="hidden" name="userId" value="@Model.UserId" />
        <button type="submit" class="btn btn-danger">Confirm Delete</button>
    </form>

    <form asp-action="UserProfile" asp-controller="User" method="get">
        <input type="hidden" name="id" value="@Model.UserId" />
        <button type="submit" class="btn btn-lg btn-secondary">Cancel</button>
    </form>
</div>
